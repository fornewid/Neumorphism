<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <soup.neumorphism.NeumorphBottomNavigation
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:elevation="20dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:neumorph_iconSize="64dp"
        app:neumorph_menuResource="@menu/menu_bottom_nav"
        app:neumorph_setBottomInset="true"
        app:neumorph_setLeftInset="true"
        app:neumorph_setRightInset="true" />

</androidx.constraintlayout.widget.ConstraintLayout>